{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "moduleResolution": "node",
        "outDir": "./dist",
        "preserveConstEnums": true,
        "removeComments": true,
        "target": "es2016",
        "strict": true,
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/*"
    ]
}